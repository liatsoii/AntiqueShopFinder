<Window x:Class="AntiqueShopFinder.AddShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление магазина" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,10,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Background="#f8f9fa">
        <Border Background="White" 
                Margin="20" 
                Padding="30"
                CornerRadius="8"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Добавление нового магазина" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"
                              Foreground="#2c3e50"/>

                    <!-- Основная информация -->
                    <TextBlock Text="Основная информация:" FontWeight="SemiBold" FontSize="15"/>

                    <TextBlock Text="Название магазина *" FontWeight="SemiBold"/>
                    <TextBox Name="NameTextBox"/>

                    <TextBlock Text="Адрес *" FontWeight="SemiBold"/>
                    <TextBox Name="AddressTextBox"/>

                    <TextBlock Text="Тип магазина *" FontWeight="SemiBold"/>
                    <ComboBox Name="ShopTypeComboBox">
                        <ComboBoxItem Content="Антикварный" Tag="antique" IsSelected="True"/>
                        <ComboBoxItem Content="Винтажный" Tag="vintage"/>
                    </ComboBox>

                    <TextBlock Text="Описание" FontWeight="SemiBold"/>
                    <TextBox Name="DescriptionTextBox" 
                            AcceptsReturn="True" 
                            Height="80" 
                            TextWrapping="Wrap"/>

                    <!-- Контактная информация -->
                    <TextBlock Text="Контактная информация:" FontWeight="SemiBold" FontSize="15" Margin="0,10,0,0"/>

                    <TextBlock Text="Телефон" FontWeight="SemiBold"/>
                    <TextBox Name="PhoneTextBox" 
                            PreviewTextInput="PhoneTextBox_PreviewTextInput"
                            DataObject.Pasting="PhoneTextBox_Pasting"/>

                    <TextBlock Text="Email" FontWeight="SemiBold"/>
                    <TextBox Name="EmailTextBox"/>

                    <TextBlock Text="Веб-сайт" FontWeight="SemiBold"/>
                    <TextBox Name="WebsiteTextBox"/>

                    <!-- Категории -->
                    <TextBlock Text="Категории:" FontWeight="SemiBold" FontSize="15" Margin="0,10,0,0"/>
                    <TextBlock Text="Выберите категории товаров, которые представлены в магазине:" 
                              FontSize="12" Foreground="#7f8c8d" Margin="0,0,0,10"/>

                    <!-- Оборачиваем панель категорий в ScrollViewer -->
                    <Border Height="120" BorderBrush="#ddd" BorderThickness="1" Background="White" Margin="0,0,0,15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <WrapPanel Name="CategoriesPanel" Margin="10">
                                <!-- Категории будут добавляться динамически -->
                            </WrapPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                        <Button Content="Добавить магазин" 
                               Click="AddShopButton_Click"
                               Background="#27ae60" 
                               Foreground="White"
                               FontWeight="SemiBold"
                               Width="160" Height="36"/>

                        <Button Content="Отмена" 
                               Click="CancelButton_Click"
                               Background="#95a5a6" 
                               Foreground="White"
                               FontWeight="SemiBold"
                               Width="100"
                               Margin="10,0,0,0" Height="36"/>
                    </StackPanel>

                    <TextBlock Name="ErrorTextBlock" 
                              Foreground="#e74c3c" 
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"
                              FontSize="13"
                              TextAlignment="Center"
                              Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>