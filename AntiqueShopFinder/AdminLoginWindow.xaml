<Window x:Class="AntiqueShopFinder.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация администратора" 
        Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8f9fa">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                Margin="30" 
                Padding="30"
                CornerRadius="8"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Авторизация администратора" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"
                          Foreground="#2c3e50"/>

                <TextBlock Text="Логин" FontWeight="SemiBold"/>
                <TextBox Name="UsernameTextBox"/>

                <TextBlock Text="Пароль" FontWeight="SemiBold"/>
                <PasswordBox Name="PasswordBox"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Войти" 
                           Click="LoginButton_Click"
                           Background="#27ae60" 
                           Foreground="White"
                           FontWeight="SemiBold"
                           Width="100"/>

                    <Button Content="Отмена" 
                           Click="CancelButton_Click"
                           Background="#95a5a6" 
                           Foreground="White"
                           FontWeight="SemiBold"
                           Width="97"
                           Margin="0,0,0,0" Height="36"/>
                </StackPanel>

                <TextBlock Name="ErrorTextBlock" 
                          Foreground="#e74c3c" 
                          TextWrapping="Wrap"
                          Margin="0,15,0,0"
                          FontSize="13"
                          TextAlignment="Center"
                          Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>